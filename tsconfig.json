{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "lib": ["es6"],
    "baseUrl": ".",
    "paths": {
      "@scope/example/*": ["./path/to/scope/example/*"]
    }
  },
  "exclude": ["node_modules"]
}
